<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MariaVik123.SegundaPage">
<Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="60"/>
      <RowDefinition Height="60"/>
      <RowDefinition Height="60"/>
      <RowDefinition Height="60"/>
    </Grid.RowDefinitions>

<Image  Grid.Row="0"
        Source="todos.png"
        Aspect="AspectFill"
        Opacity="5"/> 

<Label  Grid.Row="1"
        Text="Scot se tornou lobo alpha em qual temporada?"
        TextColor="Black"
        Margin="15"
        FontFamily="...."
        HorizontalOptions="Center"
        VerticalOptions="Center"/>

<Button Text="No final da 2º temporada"
        HeightRequest="50"
        Clicked="quandoclicarnobotaonao"
        Grid.Row="2"/>

<Button Text="No começo da 2º temporada"
        HeightRequest="50"
        Clicked="quandoclicarnobotaonao"
        Grid.Row="3"/>

<Button Text="Final da 4º temporada"
        HeightRequest="50"
        Clicked="quandoclicarnobotaosim"
        Grid.Row="4"/>

</Grid>
</ContentPage>